[SERVICE]
{% for setting in fluentbit_conf_service_settings %}
    {{  setting.name }} {{ setting.value }}
{% endfor %}


{% for input in fluentbit_conf_inputs %}
[INPUT]
{% for key in input %}
    {{ key }} {{ input[key] }}
{% endfor %}
{% endfor %}


{% for output in fluentbit_conf_outputs %}
[OUTPUT]
{% for key in output %}
    {{ key }} {{ output[key] }}
{% endfor %}
{% endfor %}


{% for filter in fluentbit_conf_filters %}
[FILTER]
{% for key in filter %}
    {{ key }} {{ filter[key] }}
{% endfor %}
{% endfor %}


{% if fluentbit_custom_conf_files is defined and fluentbit_custom_conf_files|length %}
@INCLUDE custom/conf/*
{% endif %}
